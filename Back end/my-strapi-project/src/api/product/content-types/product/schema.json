{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productimage": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "productTitle": {
      "type": "string",
      "required": true
    },
    "price": {
      "required": true,
      "type": "decimal"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "productRating": {
      "required": true,
      "type": "decimal"
    },
    "productCategory": {
      "type": "enumeration",
      "enum": [
        "men",
        "women"
      ],
      "required": true
    }
  }
}
